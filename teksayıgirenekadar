

       


       int k,total=0;
       Scanner inp = new Scanner(System.in);
       do {
           System.out.println("bir sayi girin : ");
           k = inp.nextInt();
           if ((k%2==0)&&(k%4==0)){
               total +=k;
           }
       }while(k%2==0);

         System.out.println("Toplam : " + total);


