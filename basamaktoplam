int number,adet=0,toplam=0;
         Scanner inp = new Scanner(System.in);
         System.out.println("Sayi girin : ");
         number = inp.nextInt();

         while(number != 0){
             toplam += (number%10);
             number /=10;
             adet++;


         }
         System.out.println("adet sayisi : "+adet);
         System.out.println("Toplam : " +toplam);
